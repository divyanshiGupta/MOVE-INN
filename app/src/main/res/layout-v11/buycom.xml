<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sv"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="30dp"
    android:id="@+id/ss"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <SearchView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/searchView2"
            android:background="#d2dbd9"
            android:layout_margin="5dp"

            />


        <TextView
            android:layout_width="318dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="PRICE RANGE"
            android:id="@+id/textView"
            android:layout_margin="30dp"
            android:height="23dp"
            android:textColor="@color/bright_foreground_inverse_material_dark"
            android:textStyle="bold"
            android:textSize="20dp"
            android:drawableBottom="?android:attr/dividerVertical"

            android:layout_weight="0.05" />

        <SeekBar
            android:layout_width="276dp"
            android:layout_height="wrap_content"
            android:id="@+id/seekBar"
            android:max="100"
            android:layout_margin="0dp"
            />

        <TextView
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/textView5"
            android:layout_gravity="right"
            />

        <TextView
            android:layout_width="294dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="PROJECT STATUS"
            android:textSize="20dp"
            android:textColor="@color/bright_foreground_inverse_material_dark"
            android:textStyle="bold"
            android:id="@+id/textView3"
            android:layout_weight="0.22"
            android:layout_margin="30dp"
            android:height="23dp"/>


        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinner"
            android:entries="@array/rentCspinnerps"
            android:layout_weight="0.12"
           />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="AREA"
            android:textSize="23dp"
            android:textColor="@color/bright_foreground_inverse_material_dark"
            android:textStyle="bold"
            android:id="@+id/textView7"
            android:layout_weight="0.08"
            android:layout_margin="40dp"
            android:height="23dp"/>

        <SeekBar
            android:layout_width="276dp"
            android:layout_height="wrap_content"
            android:id="@+id/seekBar2"
            android:max="1500"
            android:layout_margin="0dp"
           />

        <TextView
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/textView6"
            android:layout_gravity="right"  />

        <Button

            android:text="Submit"
            android:id="@+id/button3"
            android:textAlignment="center"
            android:background="@drawable/custom_bg"
            android:clickable="true"
            android:layout_margin="20dp"

            android:textColor="#FFFFFF"
            android:textSize="30sp"

            android:layout_width="200dp"
            android:layout_height="57dp"
              />
           <!-- android:shadowColor="#424242"
            android:shadowDx="6"
            android:shadowDy="-2"
            android:shadowRadius="11" -->








    </LinearLayout>
</RelativeLayout>
    </ScrollView>
